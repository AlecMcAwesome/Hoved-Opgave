{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('asset/CSS/Base.css') }}" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css"/>
{% endblock %}
{% block body %}
    <h1>Test Results</h1>

    <div class="well">
        <table id="testTable">
            <thead>
            <th>User</th>
            <th>Created</th>
            <th>question 1</th>
            <th>question 2</th>
            <th>question 3</th>
            <th>question 4</th>
            <th>Result</th>
            <th>Delete</th>
            </thead>
            <tbody>
            {% for Usertests in usertests %}
                <tr id="{{ Usertests.user }}">
                    <td>{{ Usertests.user }}</td>
                    <td>{{ Usertests.createdAt|date("m/d/Y") }}</td>
                    <td>{{ Usertests.question1 }}</td>
                    <td>{{ Usertests.question2 }}</td>
                    <td>{{ Usertests.question3 }}</td>
                    <td>{{ Usertests.question4 }}</td>
                    <td>{{ Usertests.result }}</td>
                    <td>
                        <button class="btn btn-primary"><a
                                    href="{{ path('admindeletetests',  {'id' : Usertests.id}) }}" style="color: white">Delete
                                Test</a></button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('adminprofile') }}"><button class="btn btn-primary">Go back</button></a>
    </div>
{% endblock %}
{% block javascript %}
    <script src="{{ asset('asset/Javascript/Admin.js') }}"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
{% endblock %}