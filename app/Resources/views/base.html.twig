<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>Welcome!</title>
    {% block stylesheets %}
    {% endblock %}
</head>
    <body>
    <nav class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li onclick="openNav()"><a href="#"><span class="glyphicon glyphicon-menu-hamburger" style ="color: white"></span></a></li>
                <li id="home"><a href="{{ path('homepage') }}" style ="color: white">Home</a></li>
                <li id="tests"><a href="" style ="color: white">PTSD Test</a></li>
                <li id="about"><a href=""  style ="color: white">About us</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('adminprofile') }}" style ="color: white"><span class="glyphicon glyphicon-user"></span> Admin</a></li>
                {% elseif is_granted('ROLE_USER') %}
                <li><a href="{{ path('profilepage') }}" style ="color: white"><span class="glyphicon glyphicon-user" style ="color: white"></span> Profile</a></li>
                {% else %}
                <li><a href="{{ path('fos_user_registration_register') }}" style ="color: white"><span class="glyphicon glyphicon-user" style ="color: white"></span> Sign Up</a></li>
                {% endif %}

                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('fos_user_security_logout') }}" style ="color: white"><span class="glyphicon glyphicon-log-out" style ="color: white"></span> Logout</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}" style ="color: white"><span class="glyphicon glyphicon-log-in" style ="color: white"></span> Login</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>

    <div class="container" style="margin-top:50px">
        <!-- The overlay -->
        <div id="myNav" class="overlay">
            <!-- Button to close the overlay navigation -->
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div class="overlay-content">
                <a href="#">About</a>
                <a href="#">Services</a>
                <a href="#">Clients</a>
                <a href="#">Contact</a>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="{{ asset('asset/Javascript/Base.js') }}"></script>
    </body>
{% block body %}
{% endblock %}
{% block javascript %}
{% endblock %}

</html>
